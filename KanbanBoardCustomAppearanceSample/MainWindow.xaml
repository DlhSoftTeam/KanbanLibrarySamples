<Window x:Class="KanbanBoardCustomAppearanceSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanBoardCustomAppearanceSample"
        xmlns:kl="clr-namespace:KanbanLibrary;assembly=KanbanLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <!-- More appearance settings are defined in code behind. -->
        <kl:KanbanBoard Name="KanbanBoard" FontSize="13"
                        Background="Beige" ItemAreaBackground="#40f0c0c0"
                        BorderBrush="BurlyWood" BorderThickness="5" Padding="5"
                        ItemBorderBrush="BurlyWood" ItemBorderThickness="2"
                        StateHoveringBackground="#a07000" GroupHoveringBackground="#a07000" 
                        ItemMoveIndicatorBrush="#a09020"
                        AreNewItemButtonsHidden="True"
                        AreEditGroupButtonsHidden="True" AreEditItemButtonsHidden="True"/>
    </Grid>
</Window>
